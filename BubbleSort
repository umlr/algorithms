#include<iostream>
#include<vector>
#include <stdlib.h>
using namespace std;

int main() {
    int n;
    bool swap_check = false;
    cout << "Enter the amount of numbers to sort: ";
    cin >> n;
    vector<int> numbers;
    cout << "Enter " << n << " numbers: \n";
    int num;

    //Input
    for(int i = 0; i < n; i++) {
        cin >> num;
        numbers.push_back(num);
    }

    //Bubble sort
    for(int i = 0; i < n - 1; i++) {
        swap_check = false;
        for(int j = n - 1; j > i; j--) {
            if(numbers[j] < numbers[j - 1]) {
                int temp = numbers[j];
                numbers[j] = numbers[j - 1];
                numbers[j - 1] = temp;
                swap_check = true;
            }
        }
        if(swap_check == false) break;
    }

    //Output
    cout << "Sorted Array: ";
    for(int i = 0; i < n; i++) {
        if(i == n - 1) {
            cout << numbers[i] << endl;
        }
        else {
            cout << numbers[i] << ", ";
        }
    }
    system("pause");
    return 0;
}
